@model IEnumerable<APPBASE.Models.FinishingVM>
@using APPBASE.Helpers
@using APPBASE.Svcbiz

<div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Tipe Produk</th>
                    <th>Jenis Produk</th>
                    <th>Kode</th>
                </tr>
            </thead>

            <tbody>
                @if (Model == null) {
                    <tr>
                        <td colspan="3" align="center">@{Html.RenderPartial("_PartialEmpty");}</td>
                    </tr>
                }

                @{int nNo = 0;}

                @foreach (var item in Model)
                {
                    nNo++;
                    
                    <tr>
                        <td>@nNo</td>
                        <td class="SEARCHABLE_ROWS">@Html.DisplayFor(modelItem => item.PRODTYPE_NAME)</td>
                        <td class="SEARCHABLE_ROWS"><a href="@Url.Action("Details", new { id = item.ID })" class="btn btn-flat btn-sm btn-success"><i class="fa fa-search"></i></a> @Html.DisplayFor(modelItem => item.FINISHING_NAME)</td>
                        <td class="SEARCHABLE_ROWS">@Html.DisplayFor(modelItem => item.FINISHING_CODE)</td>
                    </tr>
                }
            </tbody>
        </table>
</div> <!-- ./table-responsive -->


